@model SampleWebApp.Models.UserInfoModel

@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="panel">

    </div>
    <form method="post">
        @Html.AntiForgeryToken()
        <div class="col-md-4 col-md-offset-4">
            @{ if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @Html.ValidationSummary()
                    </div>
                }
            }
            <div class="form-group">
                @Html.LabelFor(m => m.NickName, "Your nick name:")
                @Html.EditorFor(m => m.NickName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FavoriteDateTime, "Your favorite date and time:")
                @Html.EditorFor(m => m.FavoriteDateTime, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local", @required = "required" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.FavoriteNumber, "Your favorite number:")
                @Html.EditorFor(m => m.FavoriteNumber, new { htmlAttributes = new { @class = "form-control", @type = "number", @step="any", @required = "required" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.FavoriteDayOfWeekId, "Your favorite day of week:")

                @Html.DropDownListFor(m => m.FavoriteDayOfWeekId,
                                       new SelectList(Model.DaysOfWeek as IList<SampleWebApp.Models.DaysOfWeek>, "Id", "Name"),
                                       new { @class = "form-control" })

            </div>

            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </form>

</div>